<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
        <h2>
          <%= pluralize(@post.errors.count, "errors") %> prevented the post from
          saving.
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.label :title %> <br>
    <%= f.text_field :title %>

    <br>
    <br>

    <%= f.label :content %> <br>
    <%= f.text_area :content %>

    <br>
    <br>

    <%= f.submit %>
    <% end %>
